{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".eslintrc.json", ".prettierrc.json", "tsconfig.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "public/**",
        "index.html",
        "vite.config.*",
        "app.json",
        "metro.config.*",
        "tsconfig.json",
        "package.json"
      ],
      "outputs": ["dist/**", ".expo/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [".eslintcache"]
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "outputs": [".eslintcache"],
      "cache": false
    },
    "format": {
      "cache": false
    },
    "format:check": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "db:migrate": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "db:studio": {
      "dependsOn": ["^build"],
      "cache": false
    }
  }
}
