{
  "name": "study-cycle-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "StudyCycle - Gerenciador de ciclos de estudo com sincronização offline/online",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run docker:watch\" \"npm run dev:all\" --names \"Docker,Dev\" --prefix \"[{name}]\" --kill-others-on-exit",
    "dev:all": "turbo dev",
    "dev:web": "turbo dev --filter=rest-express",
    "dev:mobile": "turbo dev --filter=study-cycle-mobile",
    "dev:api": "turbo dev --filter=study-cycle-api",
    "dev:watch": "concurrently \"npm run watch:schema\" \"npm run dev:all\"",
    "docker:watch": "node scripts/watch-docker.js",
    "build": "turbo build",
    "build:web": "turbo build --filter=rest-express",
    "build:mobile": "turbo build --filter=study-cycle-mobile",
    "build:api": "turbo build --filter=study-cycle-api",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:rebuild": "docker-compose down -v && docker-compose up -d --build",
    "docker:logs": "docker-compose logs -f postgres",
    "docker:status": "docker-compose ps",
    "docker:command": "node scripts/docker-command.js",
    "docker:check": "node scripts/check-docker-setup.js",
    "watch:schema": "node scripts/watch-schema.js",
    "db:migrate": "turbo db:migrate --filter=study-cycle-api",
    "db:studio": "turbo db:studio --filter=study-cycle-api"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.4.0",
    "turbo": "^2.6.3"
  }
}
